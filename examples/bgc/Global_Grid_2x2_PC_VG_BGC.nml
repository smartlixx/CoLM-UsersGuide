   DEF_dir_runtime  = '/path/to/CoLMruntime///'
   DEF_dir_output   = '/path/to/cases/'

   DEF_GRIDBASED_lon_res = 2.5
   DEF_GRIDBASED_lat_res = 1.875

! -------------------------------------------------------
! (2) Parallelization

   DEF_nx_blocks = 18
   DEF_ny_blocks = 9
   DEF_PIO_groupsize = 12

! -------------------------------------------------------
! (3) Making surface data

   ! LAI setting
   DEF_LAI_MONTHLY = .true.
   DEF_LAI_CHANGE_YEARLY = .false.

! -------------------------------------------------------
! (4) BGC initialization, only valid when running ./mkinidata.x

   DEF_USE_CN_INIT = .true.
   DEF_file_cn_init = '/XYFS01/HDD_POOL/sysu_yjdai2/SHARE01/CoLMdata/CoLMruntime//cnsteadystate.nc'
   
! -------------------------------------------------------
! (5) Parameterization scheme

 ! --- Water use efficiency optimal stomata scheme ----
 DEF_USE_WUEST = .true.

 ! --- Plant hydraulic water stress scheme ------------
 DEF_USE_PLANTHYDRAULICS = .true.

 ! --- Soil surface resistance scheme -----------------
 DEF_RSS_SCHEME = 1

 ! --- Hydrology Module -------------------------------
 DEF_USE_VariablySaturatedFlow = .true.
 DEF_Runoff_SCHEME = 3
 DEF_USE_SUPERCOOL_WATER = .true.

 ! --- Subgrid model structure ------------------------
 DEF_FAST_PC = .true.

 ! --- Canopy DEF Interception scheme selection -------
